{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "workflow description schema",
  "description": "A schema for defining workflows to store at MLExchange content registry",
  "type": "object",
  "properties": {
    "model_name": {
      "description": "model name",
      "type": "string"
    },
    "version": {
      "description": "model version",
      "type": "string"
    },
    "type": {
      "description": "model type (supervised or unsupervised)",
      "type": "string"
    },
    "user": {
      "description": "user name of the model",
      "type": "string"
    },
    "uri": {
      "description": "resource locator of the model image",
      "type": "string"
    },
    "application": {
      "description": "applciations of the model",
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 0,
      "uniqueItems": true
    },
    "description": {
      "description": "model description",
      "type": "string"
    },
    "gui_parameters": {
      "description": "GUI component parameters",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "int": {
            "description": "int type input component",
            "type": "object"
          },
          "float": {
            "description": "float type input component",
            "type": "object"
          },
          "str": {
            "description": "str type input component",
            "type": "object"
          },
          "slider": {
            "description": "slider component",
            "type": "object"
          },
          "dropdown": {
            "description": "dropdown menu component",
            "type": "object"
          },
          "radio": {
            "description": "radio item component",
            "type": "object"
          },
          "bool": {
            "description": "boolean component",
            "type": "object"
          }
        },
        "required": []
      }
    },
    "cmd": {
      "description": "commands to deploy the model",
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    }
  },
  "required": [
    "model_name",
    "version",
    "user"
  ]
}